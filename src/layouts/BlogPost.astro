---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
type Props = CollectionEntry<"journal">["data"];

const { title, summary, date, tags, contributor } = Astro.props;
---

<Layout>
  <div class="post-wrapper">
    <div class="post-header-container">
      <div class="post-header">{title}</div>
      <div class="article-date">
        {
          date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </div>
    </div>

    <slot />
  </div>
</Layout>

<style>
  .post-header-container {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--lightgray);
  }

  .post-header {
    font-family: var(--pixel-font);
    font-size: 1.5rem;
  }

  .article-date {
    font-size: 0.8rem;
    white-space: nowrap;
    color: var(--darkgray);
    padding-top: 0.35rem;
  }
  .post-wrapper {
    padding: 1rem;
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin-bottom: 0.5rem;
      margin-top: 1rem;
      font-weight: bold;
    }
    h3 {
      font-size: 1.35rem;
    }
    h4 {
      font-size: 1.2rem;
    }
    h6 {
      font-size: 0.9rem;

      strong,
      a,
      text {
        font-weight: bold;
        margin-bottom: 1rem;
      }
    }

    p,
    li {
      font-size: 1rem;

      img {
        margin: 0.5rem 0;
      }
    }

    ol li {
      list-style: decimal;
      list-style-position: inside;
      margin-left: 1.5rem;

      p {
        display: inline;
      }
    }

    ul li {
      list-style: disc;
      list-style-position: inside;

      p {
        display: inline;
      }
    }

    pre,
    summary {
      margin: 0.5rem 0 1rem 0;
    }

    summary {
      cursor: pointer;
    }

    #resources {
      border-top: 1px solid var(--darkgray);
      padding-top: 1rem;
    }
  }
</style>
